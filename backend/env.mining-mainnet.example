# ========================================
# VARIABLES DE ENTORNO PARA MINERÍA MAINNET-READY
# ========================================

# ========================================
# CONFIGURACIÓN DE BLOCKCHAIN
# ========================================
# API principal de RSC Chain
RSC_BLOCKCHAIN_API=https://rsc-chain-production.up.railway.app/

# Configuración de red
RSC_NETWORK=testnet
RSC_CHAIN_ID=1

# Timeouts de conexión (en milisegundos)
RSC_REQUEST_TIMEOUT=10000
RSC_CONNECTION_TIMEOUT=5000
RSC_MAX_RETRIES=3

# ========================================
# CONFIGURACIÓN DE MINERÍA
# ========================================
# Duración de sesiones (en milisegundos)
MINING_SESSION_MAX_DURATION=86400000
MINING_SESSION_MIN_DURATION=3600000
MINING_SESSION_COOLDOWN_PERIOD=3600000
MINING_MAX_SESSIONS_PER_DAY=1

# Potencia de hash
MINING_HASH_POWER_MIN=0.1
MINING_HASH_POWER_MAX=100.0
MINING_HASH_POWER_DEFAULT=10.0

# Recompensas
MINING_BASE_RATE=0.001
MINING_HASH_MULTIPLIER=0.2
MINING_TIME_MULTIPLIER=1.0
MINING_MAX_DAILY_REWARD=100.0

# ========================================
# CONFIGURACIÓN DE PERSISTENCIA
# ========================================
# Sincronización con blockchain
BLOCKCHAIN_SYNC_ENABLED=true
BLOCKCHAIN_SYNC_INTERVAL=30000
BLOCKCHAIN_AUTO_SYNC=true
BLOCKCHAIN_RETRY_ON_FAILURE=true

# Backup y recuperación
BACKUP_ENABLED=true
BACKUP_INTERVAL=300000
BACKUP_MAX_FILES=10

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Validación de sesiones
SESSION_VALIDATION_ENABLED=true
SESSION_MAX_CONCURRENT=1
SESSION_TIMEOUT=1800000

# Protección contra fraude
FRAUD_PROTECTION_ENABLED=true
FRAUD_DETECT_BOTS=true
FRAUD_VALIDATE_TRANSACTIONS=true
FRAUD_SUSPICIOUS_THRESHOLD=5

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================
# Tipos de notificación
NOTIFY_MINING_START=true
NOTIFY_MINING_STOP=true
NOTIFY_MINING_PROGRESS=true
NOTIFY_MINING_COMPLETION=true
NOTIFY_BLOCKCHAIN_CONNECTION=true
NOTIFY_BLOCKCHAIN_SYNC=true
NOTIFY_BLOCKCHAIN_ERROR=true
NOTIFY_SECURITY_SUSPICIOUS=true
NOTIFY_SECURITY_RATE_LIMIT=true
NOTIFY_SECURITY_VALIDATION=true

# Canales de notificación
NOTIFY_CHANNEL_IN_APP=true
NOTIFY_CHANNEL_EMAIL=false
NOTIFY_CHANNEL_PUSH=false
NOTIFY_CHANNEL_WEBHOOK=false

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
# Métricas
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=60000
METRICS_RETENTION_DAYS=30

# Logs
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Alertas
ALERTS_ENABLED=true
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_RESPONSE_TIME_THRESHOLD=5000
ALERT_MEMORY_USAGE_THRESHOLD=0.8

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================
# Modo debug
NODE_ENV=development
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Datos de prueba
TEST_DATA_ENABLED=true
MOCK_BLOCKCHAIN=true
MOCK_TRANSACTIONS=true

# ========================================
# CONFIGURACIÓN DE SUPABASE (OPCIONAL)
# ========================================
# Si quieres usar Supabase para persistencia adicional
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# CONFIGURACIÓN DE RED
# ========================================
# Puerto del servidor
PORT=3000

# Configuración de CORS
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
# Base de datos local (SQLite por defecto)
DB_TYPE=sqlite
DB_PATH=./database/mining-mainnet.db

# Si quieres usar PostgreSQL
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mining_mainnet
# DB_USER=your_username
# DB_PASSWORD=your_password

# ========================================
# CONFIGURACIÓN DE CACHE
# ========================================
# Cache en memoria
CACHE_ENABLED=true
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# ========================================
# CONFIGURACIÓN DE ENCRIPTACIÓN
# ========================================
# Clave secreta para encriptar datos sensibles
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ========================================
# CONFIGURACIÓN DE HEALTH CHECK
# ========================================
# Intervalo de verificación de salud
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=5000

# ========================================
# CONFIGURACIÓN DE LIMPIEZA
# ========================================
# Limpieza automática de datos antiguos
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=3600000
CLEANUP_RETENTION_DAYS=30
