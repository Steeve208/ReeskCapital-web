{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/admin-frontend/src/*"],
      "@rsc/ui": ["./packages/ui/src"],
      "@rsc/config": ["./packages/config/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", ".turbo"]
}
